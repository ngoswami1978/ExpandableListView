<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_row_selector"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/view_background"
            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin">

                <!-- Thumbnail Image -->
                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="8dp" />

                <!-- Owner Name Confirmed-->
                <TextView
                    android:id="@+id/OwnerNameConfirmed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/thumbnail"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:text="Neeraj Goswami"
                    android:drawableLeft="@drawable/tickmarkgreen"
                    android:drawablePadding="@dimen/five_dp"
                    android:textSize="@dimen/title"
                    android:textStyle="bold" />
                <!-- Owner Name Confirmed-->
                <TextView
                    android:id="@+id/OwnerNameUnConfirmed"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_alignTop="@+id/thumbnail"
                    android:layout_toRightOf="@+id/thumbnail"
                    android:text="Neeraj Goswami"
                    android:drawableLeft="@drawable/untickmarkred"
                    android:drawablePadding="@dimen/five_dp"
                    android:textSize="@dimen/title"
                    android:textStyle="bold" />

            </LinearLayout>


            <!-- Owner Flat -->
            <TextView
                android:id="@+id/OwnerFlatNo"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dip"
                android:paddingLeft="@dimen/fifteen_dp"
                android:text="FlatNo"
                android:textSize="@dimen/genre" />

            <!-- Owner Address -->
            <TextView
                android:id="@+id/OwnerAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/OwnerFlatNo"
                android:layout_marginTop="5dp"
                android:overScrollMode="always"
                android:paddingLeft="@dimen/fifteen_dp"
                android:scrollbarStyle="insideInset"
                android:text="Address"
                android:textColor="@color/year"
                android:textSize="@dimen/year" />

            <!-- Owner Location -->
            <TextView
                android:id="@+id/OwnerLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/fifteen_dp"
                android:text="Location"
                android:textColor="@color/year"
                android:textSize="@dimen/year" />

            <!-- Owner Phone Number -->
            <TextView
                android:id="@+id/OwnerPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/fifteen_dp"
                android:layout_marginTop="1dp"
                android:text="Phone"
                android:textColor="@color/year"
                android:textSize="@dimen/year" />
            <!-- Owner Phone Number -->
            <TextView
                android:id="@+id/OwnerEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/fifteen_dp"
                android:layout_marginTop="1dp"
                android:text="Email"
                android:textColor="@color/year"
                android:textSize="@dimen/year" />


            <!-- Renter Header -->
            <TextView
                android:id="@+id/Renterheader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dip"
                android:text="Renter"
                android:textColor="@color/genre"
                android:textSize="@dimen/rating" />

            <!-- Renter Name-->
            <TextView
                android:id="@+id/RenterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/fifteen_dp"
                android:text="Name"
                android:textColor="@color/year"
                android:textSize="@dimen/year" />

            <!-- Renter Address-->
            <TextView
                android:id="@+id/RenterAddress"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/RenterName"
                android:layout_marginTop="5dp"
                android:overScrollMode="always"
                android:paddingLeft="@dimen/fifteen_dp"
                android:scrollbarStyle="insideInset"
                android:text="Address"
                android:textColor="@color/year"
                android:textSize="@dimen/year" />
            <!-- Renter Location-->
            <TextView
                android:id="@+id/RenterLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/fifteen_dp"
                android:text="Location"
                android:textColor="@color/year"
                android:textSize="@dimen/year" />
            <!-- Renter Phone Number-->
            <TextView
                android:id="@+id/RenterPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/fifteen_dp"
                android:layout_marginTop="1dp"
                android:text="Phone"
                android:textColor="@color/year"
                android:textSize="@dimen/year" />
            <!-- Renter Phone Number-->
            <TextView
                android:id="@+id/RenterEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/fifteen_dp"
                android:layout_marginTop="1dp"
                android:text="Email"
                android:textColor="@color/year"
                android:textSize="@dimen/year" />

            <!-- Maintainance Header -->
            <TextView
                android:id="@+id/maintainanceHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dip"
                android:text="Maintainance"
                android:textColor="@color/genre"
                android:textSize="@dimen/rating" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:id="@+id/lstpaymentamountHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/fifteen_dp"
                        android:text="Last Paid Amount"
                        android:textColor="@color/list_row_hover_end_color" />

                    <TextView
                        android:id="@+id/lstPaidAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/fifteen_dp"
                        android:textColor="@color/year"
                        android:textSize="@dimen/year" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/lstpaymentmonthyearHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/fifteen_dp"
                        android:text="Last Paid Month and Year"
                        android:textColor="@color/list_row_hover_end_color" />

                    <TextView
                        android:id="@+id/lstPaidMonthYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/fifteen_dp"
                        android:textColor="@color/year"
                        android:textSize="@dimen/year" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/lstpaymentdateHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/fifteen_dp"
                        android:text="Last Paid date"
                        android:textColor="@color/list_row_hover_end_color" />

                    <TextView
                        android:id="@+id/lstPaidDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/fifteen_dp"
                        android:textColor="@color/year"
                        android:textSize="@dimen/year" />

                </TableRow>

            </TableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>